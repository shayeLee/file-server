{
  "apps": [
    {
      "name": "app",
      "script": "app.ts",
      "watch": true,
      "env": {
        "COMMON_VARIABLE": "true"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy": {
    "production": {
      "keys": "~/.ssh/id_rsa.pub",
      "user": "www",
      "host": ["192.168.50.99"],
      "ref": "origin/master",
      "repo": "git@github.com:shayeLee/file-server.git",
      "path": "/home/www/fileServer",
      "post-deploy": "yarn install && ls && pm2 reload app.ts"
    }
  }
}
