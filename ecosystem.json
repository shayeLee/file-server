{
  "apps": [
    {
      "name": "app",
      "script": "app.ts",
      "watch": true,
      "env": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy": {
    "production": {
      "keys": "~/.ssh/id_rsa.pub",
      "user": "root",
      "host": ["192.168.50.99"],
      "ref": "origin/master",
      "repo": "git@github.com:shayeLee/file-server.git",
      "path": "~/fileServer",
      "post-deploy": "yarn install && pm2 startOrRestart ecosystem.json --env production"
    }
  }
}
